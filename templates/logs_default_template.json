{
  "index_patterns": ["logs-default-*", "logs-*"],
  "priority": 700,
  "template": {
    "settings": {
      "index": {
        "number_of_shards": "1",
        "number_of_replicas": "0",
        "opendistro": {
          "index_state_management": {
            "policy_id": "logs-default-retention",
            "rollover_alias": "logs-default"
          }
        }
      }
    },
    "mappings": {
      "dynamic": true,
      "properties": {
        "tenant_id": { "type": "keyword" },
        "severity": { "type": "keyword" },
        "@timestamp": { "type": "date" },
        "message": { "type": "text" },
        "original": {
          "properties": {
            "raw_kv": { "type": "object", "enabled": true },
            "message_raw": { "type": "text" }
          }
        }
      }
    }
  }
}

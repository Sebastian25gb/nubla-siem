{
  "policy": {
    "policy_id": "logs-generic-policy",
    "description": "Política genérica multi-tenant (dev) - rollover por edad y tamaño moderado",
    "schema_version": 18,
    "default_state": "hot",
    "states": [
      {
        "name": "hot",
        "actions": [
          {
            "rollover": {
              "min_index_age": "1d",
              "min_size": "1gb"
            }
          }
        ],
        "transitions": [
          {
            "state_name": "delete",
            "conditions": {
              "min_index_age": "14d"
            }
          }
        ]
      },
      {
        "name": "delete",
        "actions": [
          {
            "delete": {}
          }
        ],
        "transitions": []
      }
    ],
    "ism_template": {
      "index_patterns": ["logs-*-*"],
      "priority": 10
    }
  }
}

{
  "policy": {
    "policy_id": "logs-generic-policy",
    "description": "Rollover gen√©rico para logs multi-tenant (usar como base para copiar por tenant)",
    "schema_version": 1,
    "error_notification": null,
    "default_state": "hot",
    "states": [
      {
        "name": "hot",
        "actions": [
          {
            "rollover": {
              "min_index_age": "1d",
              "min_size": "50gb",
              "min_doc_count": 10000000
            }
          }
        ],
        "transitions": [
          {
            "state_name": "delete",
            "conditions": {
              "min_index_age": "30d"
            }
          }
        ]
      },
      {
        "name": "delete",
        "actions": [
          {
            "delete": {}
          }
        ],
        "transitions": []
      }
    ],
    "ism_template": {
      "index_patterns": [
        "logs-*-*"
      ],
      "priority": 10
    }
  }
}
{
  "policy": {
    "policy_id": "logs-delawarehotel-policy",
    "description": "Rollover y retenci√≥n extendida del tenant delawarehotel",
    "schema_version": 18,
    "default_state": "hot",
    "states": [
      {
        "name": "hot",
        "actions": [
          {
            "rollover": {
              "min_index_age": "12h",
              "min_size": "5gb"
            }
          }
        ],
        "transitions": [
          {
            "state_name": "delete",
            "conditions": {
              "min_index_age": "30d"
            }
          }
        ]
      },
      {
        "name": "delete",
        "actions": [
          {
            "delete": {}
          }
        ],
        "transitions": []
      }
    ],
    "ism_template": {
      "index_patterns": ["logs-delawarehotel-*"],
      "priority": 150
    }
  }
}

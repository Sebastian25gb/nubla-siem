{
  "policy": {
    "policy_id": "logs-default-retention",
    "description": "Retención rápida para índice default (dev), rollover por edad/tamaño moderado y delete a 7d",
    "schema_version": 18,
    "default_state": "hot",
    "states": [
      {
        "name": "hot",
        "actions": [
          {
            "rollover": {
              "min_index_age": "1d",
              "min_size": "512mb"
            }
          }
        ],
        "transitions": [
          {
            "state_name": "delete",
            "conditions": {
              "min_index_age": "7d"
            }
          }
        ]
      },
      {
        "name": "delete",
        "actions": [
          {
            "delete": {}
          }
        ],
        "transitions": []
      }
    ],
    "ism_template": {
      "index_patterns": ["logs-default-*"],
      "priority": 100
    }
  }
}